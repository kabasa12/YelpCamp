<% layout('layouts/boilerplate')%>
    <div id="cluster-map"></div>
    <h1>All Campgrounds</h1>
    <% for(let camp of campgrounds) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid w-100 img-thumbnail"
                        src="<%=camp.images.length?camp.images[0].media : 
                            'https://res.cloudinary.com/dnfgbn1uh/image/upload/v1696239866/YelpCamp/tm19dzjviszqsiwk2qgb.jpg'%>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-secondary">
                                <%= camp.location %>
                            </small>
                        </p>
                        <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">
                            <%= camp.title %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <script>
        const mapBoxToken = '<%-process.env.MAPBOX_TOKEN%>';
        const campgrounds = <%- JSON.stringify(campgrounds) %>
    </script>
    <script src="/scripts/clusterMap.js"></script>